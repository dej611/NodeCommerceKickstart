extends layout
// Usiamo layout.jade come punto di partenza e ne
// arricchiamo i vari 'blocchi'

append css
  // Carichiamo il CSS per la pagina specifica 
  link(rel='stylesheet', href='/css/app.css')

append extra
  // Impostiamo il titolo della pagina
  title 'Benvenuto!'

// .qualcosa è una div con la classe 'qualcosa'
// #qualcosa è un div con l'id 'qualcosa'
// se si vuole qualcosa diverso da un div, basta specificarlo:
// p, span, ul, ...
// Ref: https://github.com/visionmedia/jade#readme
append contenutoPagina
  // Fonte Template:
  // http://twitter.github.com/bootstrap/examples/carousel.html
  .navbar-wrapper
    .container
      .navbar.navbar-inverse
        .navbar-inner
          button.btn.btn-navbar(data-target='.nav-collapse', data-toggle='collapse', type='button')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='#') App!
          .nav-collapse.collapse
            ul.nav
              li.active
                a(href='#') Home
              li
                a(href='/prodotti') Catalogo
              li
                a(href='/carrello') Carrello

  #carosello.carousel.slide
    .carousel-inner
      .item.active
        img(alt='', src='/img/slide-01.jpg')
        .container
          .carousel-caption
            h1 Esempio
            p.lead Qui ci si scrive qualcosa d'effetto
            a.btn.btn-large.btn-primary(href='#') Inscrivi subito!
      .item
        img(alt='', src='/img/slide-02.jpg')
        .container
          .carousel-caption
            h1 Esempio 2
            p.lead Qui ci si scrive qualcosa d'effetto
            a.btn.btn-large.btn-primary(href='#') Inscrivi subito!
      .item
        img(alt='', src='/img/slide-03.jpg')
        .container
          .carousel-caption
            h1 Esempio 3
            p.lead Qui ci si scrive qualcosa d'effetto
            a.btn.btn-large.btn-primary(href='#') Inscrivi subito!
    a.left.carousel-control(data-slide='prev', href='#carosello')
      ‹
    a.right.carousel-control(data-slide='next', href='#carosello')
      ›
  .container.marketing
    .row
      .span4
        h2 Spot
        p Qualcosa di fico
        p
          a.btn.btn-warning Vai subito!
      .span4
        h2 Spot
        p Qualcosa di fico
        p
          a.btn.btn-warning Vai subito!
      .span4
        h2 Spot
        p Qualcosa di fico
        p
          a.btn.btn-warning Vai subito!
    hr.featurette-divider
      .featurette
        img
        h2 Qualcosa di grosso
        p.lead Tipo questo scritto qua sotto... che però è piccolo
    footer
      p.pull-right
        a(href='#') Torna su
      p © 2013 Company, Inc. · 
      a(href='#') Privacy
      a(href='#') Termini

append scripts
  // Importiamo il JS specifico della pagina
  script(src='/js/welcome.js')